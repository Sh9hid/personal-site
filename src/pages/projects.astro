---
import PageLayout from '../layouts/PageLayout.astro';
import ProjectCase from '../components/ProjectCase.astro';

const projects = [
  {
    title: 'Personal Site',
    description: 'Terminal-style personal website with slash-command navigation.',
    tags: ['Astro', 'TypeScript', 'React'],
    repo: 'https://github.com/username/personal-site',
    date: '2026-02-01'
  }
];
---

<PageLayout title="Projects - Abdullah Shahid" description="Projects and portfolio work">
  <section>
    <h1 class="text-2xl font-bold text-terminal-fg mb-2">Projects</h1>
    <p class="text-terminal-dim mb-8">Things I've built.</p>
    
    {projects.length > 0 ? (
      <div class="space-y-6">
        {projects.map(project => (
          <ProjectCase {...project} />
        ))}
      </div>
    ) : (
      <p class="text-terminal-dim">No projects yet.</p>
    )}
  </section>
</PageLayout>
